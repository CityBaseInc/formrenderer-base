<div class='section-break-inner section-break-size-<%= @model.get('field_options.size') %>'>
  <div class='section-name'><%= @model.get('label') %></div>
  <% if @model.get('field_options.description'): %>
    <p><%- _.sanitize(_.simpleFormat(@model.get('field_options.description'), false)) %></p>
  <% end %>
</div>
