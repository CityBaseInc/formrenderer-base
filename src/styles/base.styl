$errorColor = #c12f2e
$lightGray = #eee

.fr_clear
  display: block;
  visibility: hidden;
  clear: both;
  overflow: hidden;
  width: 0;
  height: 0;

.fr_cf:before,
.fr_cf:after
  display: table; /* 1 */
  content: " ";   /* 2 */

.fr_cf:after
  clear: both;

.fr_pagination
  list-style none
  border-bottom 3px solid #efefef
  margin-top 0
  margin-bottom 40px
  padding-left 0
  display table
  width 100%
  height 40px

  li
    display table-cell
    text-align center

    a, span
      cursor pointer
      position relative
      display inline-block
      bottom -20px
      color #fff
      width 40px
      height 40px
      text-align center
      line-height 36px
      border-radius 50%
      font-size 16px
      margin-right 20px
      text-decoration none
      border 2px solid #e5e5e5
      text-shadow 0 -1px 0 #999

    span
      background-color #2aa828

    a
      background-color #aaa

      &:hover
        background-color darken(#aaa, 5%)

    &.has_errors
      span
        background-color $errorColor

      a
        background-color lighten($errorColor, 50%)

      a:hover
        background-color lighten($errorColor, 45%)

    &.active span
      background-color #2aa828

.fr_form
  label
    display block

.fr_response_field
  margin-bottom 20px

.fr_bottom_bar
  display table
  width 100%
  padding 10px
  background-color $lightGray

.fr_bottom_bar_l,
.fr_bottom_bar_r
  display table-cell

.fr_bottom_bar_l
  text-align left

.fr_bottom_bar_r
  text-align right


.fr_input_grid
  margin: 0;
  margin-left: -10px; /* 1 */
  padding: 0;
  list-style: none;   /* 2 */
  font-size: 0;       /* 3 */
  max-width 500px

  > div
    display: inline-block;
    padding-left: 10px;  /* 1 */
    vertical-align: top; /* 2 */
    font-size: 1rem;     /* 3 */

    input, select
      width 100%

  .fr_item_full
    width 100%

  .fr_item_half
    width 50%

  .fr_item_above
    margin-top 2px

  .fr_item_auto
    //

.fr_response_field_file
  .existing
    display none

  &.existing
    .existing
      display block

    .not_existing
      display none

.fr_map_wrapper
  width 100%
  max-width 500px
  height 246px
  position relative
  border 1px solid #ddd
  border-radius 3px

  .fr_map_map
    width 100%
    height 220px
    border-radius 3px 3px 0 0

  .fr_map_cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 10
    background rgba(255, 255, 255, 0.4)
    text-align center
    padding-top 100px
    font-size 1.2rem
    color #333
    font-weight 600
    cursor pointer

  .fr_map_toolbar
    height 24px
    line-height 24px
    padding 0 5px
    background-color #eee
    font-size 0.85rem
    border-radius 0 0 3px 3px

    a
      float right
