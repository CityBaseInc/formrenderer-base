<div class='fr_grid'>
  <div class='fr_half'>

    <% isStatic = @isRenderingStatic || @form_renderer?.options?.follow_up_form_id? %>

    <label for='<%= @domId() %>-name'>
      <%= FormRenderer.t.name %>

      <% unless isStatic: %>
        <abbr class='fr_required' title='required'>*</abbr>
      <% end %>
    </label>

    <% if isStatic: %>
      <span><%= @model.get('value.name') %></span>
    <% else: %>
      <input type='text'
             id='<%= @domId() %>-name'
             data-rv-input='model.value.name' />
    <% end %>
  </div>

  <div class='fr_half'>
    <label for='<%= @domId() %>-email'>
      <%= FormRenderer.t.email %>
      <% unless isStatic: %>
        <abbr class='fr_required' title='required'>*</abbr>
      <% end %>
    </label>

    <% if isStatic: %>
      <span><%= @model.get('value.email') %></span>
    <% else: %>
      <input type="text"
             id='<%= @domId() %>-email'
             data-rv-input='model.value.email' />
    <% end %>
  </div>
</div>
