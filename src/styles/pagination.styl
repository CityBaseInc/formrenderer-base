@import 'variables'

.fr_pagination
  list-style none
  border-bottom 3px solid #efefef
  margin-bottom 40px
  padding-left 0
  display table
  width 100%
  height 40px

  li
    display table-cell
    text-align center

    a, span
      cursor pointer
      position relative
      display inline-block
      bottom -20px
      color #fff
      width 40px
      height 40px
      text-align center
      line-height 36px
      border-radius 50%
      font-size 16px
      margin-right 20px
      text-decoration none
      border 2px solid #e5e5e5
      text-shadow 0 -1px 0 #999

    span
      background-color #2aa828

    a
      background-color #aaa

      &:hover
        background-color darken(#aaa, 5%)

    &.has_errors
      span
        background-color $errorColor

      a
        background-color lighten($errorColor, 50%)

      a:hover
        background-color lighten($errorColor, 45%)

    &.active span
      background-color #2aa828
