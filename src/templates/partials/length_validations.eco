<% min = @model.get('field_options.minlength') %>
<% max = @model.get('field_options.maxlength') %>
<% units = @model.getLengthValidationUnits() %>

<% if @model.hasLengthValidations(): %>
  <div class='fr_min_max'>
    <span class='fr_min_max_guide'>
      <% if min && max: %>
        <% if min == max: %>
          <%= FormRenderer.t.enter_exactly.replace(':num', min) %> <%= units %>.
        <% else: %>
          <%= FormRenderer.t.enter_between.replace(':min', min).replace(':max', max) %> <%= units %>.
        <% end %>
      <% else if min: %>
        <%= FormRenderer.t.enter_at_least.replace(':min', min) %> <%= units %>.
      <% else if max: %>
        <%= FormRenderer.t.enter_up_to.replace(':max', max) %> <%= units %>.
      <% end %>
    </span>

    <%- JST["partials/length_counter"](@) %>
  </div>
<% end %>
